{
  "compilerOptions": {
    "paths": {
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@db": ["./src/db"],
      "@db/*": ["./src/db/*"],
      "@middlewares": ["./src/middlewares"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@controllers": ["./src/controllers"],
      "@controllers/*": ["./src/controllers/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@interfaces": ["./src/global/interfaces"],
      "@interfaces/*": ["./src/global/interfaces/*"],
      "@constants": ["./src/global/constants"],
      "@constants/*": ["./src/global/constants/*"],
      "@error": ["./src/global/response/error"],
      "@error/*": ["./src/global/response/error/*"],
      "@success": ["./src/global/response/success"],
      "@success/*": ["./src/global/response/success/*"]
    },
    "target": "ES2016",
    "module": "CommonJS",
    "incremental": true,
    "rootDir": "./",
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
